@using MixERP.Net.UI.ScrudFactory
@model Config

@Html.ScrudFor(Model)

<script>
    function scrudCustomValidator() {
        var fromDaysTextbox = $("#from_days");
        var toDaysTextbox = $("#to_days");

        var fromDays = parseInt2(fromDaysTextbox.val());
        var toDays = parseInt2(toDaysTextbox.val());

        if (toDays <= fromDays) {
            displayMessage("@ViewData["CompareDaysErrorMessage"]");
            return false;
        };
        return true;
    };
</script>