@using MixERP.Net.UI.ScrudFactory
@model Config

@Html.ScrudFor(Model)

<script type="text/javascript">

    var effectiveFromTextbox = $("#effective_from");
    var endsOnTextbox = $("#ends_on");

    $(document).ready(function () {
        scrudCustomValidator();
    });

    function scrudCustomValidator() {
        var effectiveFrom = parseDate(effectiveFromTextbox.val());
        var endsOn = parseDate(endsOnTextbox.val());

        if (endsOn < effectiveFrom) {
            displayMessage("@ViewData["DateErrorMessage"]");
            return false;
        };
        return true;
    };

</script>
