<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Titillium+Web">
    <link rel="stylesheet" type="text/css" href="/bundles/styles/site.min.css">
</head>
<body>
    <div id="wrapper">
        <div class="brand theme">
            <div class="logo">
                <a href="/">
                    <img src="~/Contents/images/mixerp-logo.png" alt="MixERP" />
                </a>
                <div class="right-menu">
                    @Html.Partial("_RightMenu")
                </div>
            </div>
            @Html.Partial("_Menu")
        </div>
        <div id="page-wrapper">
            <div class="ui grid">
                <div class="sixteen wide column">
                    @RenderBody()
                </div>
            </div>
            <div class="row">
            </div>
        </div>
    </div>

    <script>
        var thousandSeparator = ",";
        var decimalSeparator = ".";
        var currencySymbol = "";
    </script>
    <script src="~/bundles/script/libraries.js"></script>

</body>
</html>