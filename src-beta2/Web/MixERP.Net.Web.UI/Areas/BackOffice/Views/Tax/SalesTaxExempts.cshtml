@using MixERP.Net.UI.ScrudFactory
@model Config

@Html.ScrudFor(Model)

<script type="text/javascript">
    function scrudCustomValidator() {
        var validFrom = $("#valid_from");
        var validTill = $("#valid_till");
        var priceFrom = $("#price_from");
        var priceTo = $("#price_to");

         validFrom = parseDate(validFrom.val());
         validTill = parseDate(validTill.val());
         priceFrom = parseFloat2(priceFrom.val());
         priceTo = parseFloat2(priceTo.val());

        if (validTill < validFrom) {
            displayMessage("@ViewData["DateErrorMessage"]");
            return false;
        };
        if (priceTo <= priceFrom) {
            displayMessage("@ViewData["ComparePriceErrorMessage"]");
            return false;
        };

        return true;
    };

</script>
